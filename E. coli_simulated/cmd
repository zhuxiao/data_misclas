IDBA-UD
time fq2fa --merge  wgsim_ecoli_50x_1.fq wgsim_ecoli_50x_2.fq wgsim_ecoli_50x.fa
time idba_ud --mink 20 --maxk 120 --min_contig 1000 --num_threads 8 -r wgsim_ecoli_50x.fa -o ecoli_idba_out_1000


BWA
bwa index scaffold.fa
bwa mem -t 8 scaffold.fa wgsim_ecoli_50x_1.fq wgsim_ecoli_50x_2.fq > ecoli_50x_idba.sam
samtools view -b -S -@ 8 ecoli_50x_idba.sam > ecoli_50x_idba.bam
samtools sort -@ 8 ecoli_50x_idba.bam -o ecoli_50x_idba_sorted.bam
samtools index -@ 8 ecoli_50x_idba_sorted.bam ecoli_50x_idba_sorted.bai


Misasm
misasm scaffold.fa ecoli_50x_idba_sorted.bam

Pilon
pilon --genome scaffold.fa --frags ecoli_50x_idba_sorted.bam --changes

REAPR
reapr pipeline ../BWA-bam/scaffold.fa ../BWA-bam/ecoli_50x_idba_sorted.bam REAPR_out

QUAST
quast.py -r NC_000913.3 -t 8 --extensive-mis-size 100 scaffold.fa -m 1000 -o QUAST_out

Misfinder
mf all -conf config -o misFinder_out


misClas_Misasm
cat genome_Indel genome_Misjoin | awk '{split($1,a,":");split(a[2],b,"-");print a[1]"\t"b[1]"\t"b[2]}' > MisasmRaw
filterOverlapReg.py MisasmRaw scaffold.fa.fai > MisasmReg
misclas.py -r scaffold.fa -b ecoli_50x_idba_sorted.bam -f MisasmReg

misClas_Pilon
cat misassemblies_Pilon | grep "fix" | grep ":" | cut -d ":" -f 2,3 | awk '{split($1,a,":");split(a[2],b,"-");print a[1]"\t"b[1]"\t"b[2]}' > PilonRaw
filterOverlapReg.py PilonRaw scaffold.fa.fai > PilonReg
misclas.py -r scaffold.fa -b ecoli_50x_idba_sorted.bam -f misclas.py -r scaffold.fa -b ecoli_50x_idba_sorted.bam -f PilonReg

misClas_REAPR
cat misassemblies_REAPR | grep "Error" | awk '{print $1"\t"$4"\t"$5}' > REAPRaw   || cat misassemblies_REAPR | grep "Error" | grep -v "Frag_cov" | awk '{print $1"\t"$4"\t"$5}'
filterOverlapReg.py REAPRaw scaffold.fa.fai > REAPReg
misclas.py -r scaffold.fa -b ecoli_50x_idba_sorted.bam -f misclas.py -r scaffold.fa -b ecoli_50x_idba_sorted.bam -f REAPReg

misClas_QUAST
extractQUASTreg.py misassemblies_QUAST > QUASTraw
filterOverlapReg.py QUASTraw scaffold.fa.fai > QUASTreg
misclas.py -r scaffold.fa -b ecoli_50x_idba_sorted.bam -f misclas.py -r scaffold.fa -b ecoli_50x_idba_sorted.bam -f QUASTreg

misClas_misFinder
cat misassemblies_misFinder | awk '{print $1"\t"$3"\t"$4}' > misFindeRaw
filterOverlapReg.py misFindeRaw scaffold.fa.fai > misFindeReg
misclas.py -r scaffold.fa -b ecoli_50x_idba_sorted.bam -f misclas.py -r scaffold.fa -b ecoli_50x_idba_sorted.bam -f misFindeReg
